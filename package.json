{
  "name": "kickass-component-library",
  "version": "1.0.0",
  "description": "A boilerplate guide to building a world class component library",
  "main": "index.js",
  "scripts": {
    "build": "yarn clean && yarn build:types && yarn build:parcel",
    "build:parcel": "parcel src/index.tsx --out-dir dist",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.build.json",
    "clean": "rm -rf dist/",
    "storybook": "start-storybook",
    "storybook:build": "build-storybook -s ./storybook-out",
    "test": "test"
  },
  "author": "David Sally <davidcsally@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-angular": "^9.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@storybook/addon-docs": "^6.0.0-rc.23",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.0.0-rc.23",
    "@types/react": "^16.9.44",
    "@types/styled-components": "^5.1.2",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.11.1",
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "fork-ts-checker-webpack-plugin": "^5.0.13",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "parcel": "^1.12.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "semantic-release": "^17.1.1",
    "storybook": "^6.0.0-rc.23",
    "styled-components": "^5.1.1",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "docs(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/release-notes-generator"
    ]
  }
}
